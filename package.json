{
  "name": "backend-api-koa-ts",
  "version": "1.0.0",
  "description": "Backend api based in koa in typescript",
  "main": "app.js",
  "scripts": {
    "build": "tsc",
    "format": "npx prettier --write .",
    "test": "npx mocha --opts ./tests/mocha.opts ./tests",
    "test:coverage": "npx nyc mocha --opts ./tests/mocha.opts ./tests",
    "start": "node dist/src/app.js",
    "dev": "nodemon --watch src --ext js --exec 'nf start -j Procfile.dev || exit 1'",
    "lint": "eslint . --ext .ts --report-unused-disable-directives",
    "lint:fix": "eslint . --ext .ts --fix",
    "snyk": "snyk auth $SNYK_TOKEN && snyk test",
    "migrate:make": "knex migrate:make --knexfile ./src/database/knexfile.js",
    "db:migrate": "knex migrate:latest --knexfile ./src/database/knexfile.js",
    "db:rollback": "knex migrate:rollback --knexfile ./src/database/knexfile.js",
    "infra": "docker-compose up -d",
    "infra:stop": "docker-compose down"
  },
  "author": "Reloaded Team",
  "license": "MIT",
  "devDependencies": {
    "@strv/eslint-config-base": "^3.4.0",
    "@strv/eslint-config-node": "^3.3.1",
    "@strv/eslint-config-typescript": "^4.1.2",
    "@types/config": "^3.3.1",
    "@types/dotenv": "^8.2.0",
    "@types/kcors": "^2.2.6",
    "@types/koa": "^2.13.9",
    "@types/koa-compress": "^4.0.4",
    "@types/koa-helmet": "^6.0.6",
    "@types/koa-router": "^7.4.5",
    "@types/node": "^20.8.7",
    "@types/pino": "^7.0.5",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "prettier": "3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "config": "^3.3.9",
    "dotenv": "^16.3.1",
    "kcors": "^2.2.2",
    "koa": "^2.14.2",
    "koa-body": "^6.0.1",
    "koa-compress": "^5.1.1",
    "koa-helmet": "^7.0.2",
    "koa-router": "^11.0.2",
    "pino": "^8.16.0"
  }
}
